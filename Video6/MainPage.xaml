<?xml version="1.0" encoding="utf-8" ?>
    
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="Video6.MainPage">

    <!-- Creamos un nuevo StackLayout y definimos su margen con la propiedad Margin -->
    
    <StackLayout Margin="30,30,30,30">
        
        <!-- Creamos un control Entry y definimos sus propiedades -->

        <Entry Placeholder="Usuario"
               
               MaxLength="10"
               
               IsSpellCheckEnabled="True"
               
               IsTextPredictionEnabled="True"
               
               IsPassword="True"
               
               CharacterSpacing="10"
               
               Keyboard="Numeric"
               
               TextChanged="Entry_TextChanged"
               
               Completed="Entry_Completed"/> <!-- Creamos dos eventos uno con la propiedad TextChanged, y el otro con la propiedad Completed -->

    </StackLayout>

</ContentPage>
